{
  "env": {
    "development": {
      "presets": [
        ["es2015", { "modules": false }],
        "react"
      ],
      "plugins": [
        "array-includes",
        "react-hot-loader/babel",
        "transform-class-properties",
        "transform-es2015-parameters",
        "transform-object-assign",
        "transform-object-rest-spread"
      ]
    },
    "production": {
      "presets": [
        "es2015",
        "react"
      ],
      "plugins": [
        "array-includes",
        "transform-class-properties",
        "transform-es2015-parameters",
        "transform-object-assign",
        "transform-object-rest-spread"
      ]
    },
    "test": {
      "presets": [
        "es2015",
        "react"
      ],
      "plugins": [
        "array-includes",
        "transform-class-properties",
        "transform-es2015-parameters",
        "transform-object-assign",
        "transform-object-rest-spread"
      ]
    }
  }
}
